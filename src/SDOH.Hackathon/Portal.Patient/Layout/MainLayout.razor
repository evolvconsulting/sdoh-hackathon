@inherits LayoutComponentBase

<MudThemeProvider Theme="evolvTheme" />

<MudLayout>
    <MudAppBar Elevation="1" Bottom="true" Fixed="true" justify-center>
        <MudIconButton Icon="@Icons.Material.Filled.Home" Color="Color.Inherit" Href="/" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MedicalServices" Color="Color.Inherit" Title="Interventions" Href="suggestedinterventions" />
        <MudSpacer/>
        <MudIconButton Icon="@Icons.Material.Filled.LocalPharmacy" Color="Color.Inherit" Title="Medications" Href="" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.CalendarMonth" Color="Color.Inherit" Title="Appointments" Href="" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" Title="Notification Center" Href="notifications" />
    </MudAppBar>
    <MudMainContent Style="padding-top: 0; margin-left: 15px; margin-right:15px; margin-top: 15px;">
        @Body
    </MudMainContent>
</MudLayout>


@code {
    MudTheme evolvTheme = new MudTheme()
        {
            Typography = new Typography()
            {
                Default = new Default()
                {
                    FontFamily = new[] { "Open Sans Light" }
                }
            }
        };
}